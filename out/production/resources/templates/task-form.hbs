{{#partial "content"}}

    {{#if editTask}}
        <h1>Edit task:</h1>
        <form action="/categories/{{ categoryId }}/tasks/{{editTask.id}}/update" method="post">
            <label for="description">Edit this task's description</label>
            <input id="description" name="description" type="text" value="{{editTask.description}}">
            <button type="submit" class="btn btn-default">Edit task</button>
        </form>
    {{else}}


    {{#if tasks}}
        {{#each tasks }}
                <li>{{ description }} <a href="/categories/{{ categoryId }}/tasks/{{ id }}">edit...</a></li>
        {{/each}}

    {{else}}
            <p>No tasks!</p>
    {{/if}}


    <h1>Add a new Task!</h1>

    <form action="/categories/{{ categoryId }}/tasks" method="post">
        <label for="description">Task Description</label>
        <input id="description" name="description" type="text">
        <button type="submit" class="btn btn-default">Add task</button>
    </form>
    {{/if}}

{{/partial}}

{{> layout.hbs}}

